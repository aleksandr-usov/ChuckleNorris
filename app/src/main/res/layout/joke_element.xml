<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp">

    <View
        android:id="@+id/v_joke_element"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="3"
        android:text="@string/chuck_norris_is_oh_so_strong_and_cool_chuck_norris_is_oh_so_strong_and_cool_chuck_norris_is_oh_so_strong_and_cool_chuck_norris_is_oh_so_strong_and_cool_chuck_norris_is_oh_so_strong_and_cool_chuck_norris_is_oh_so_strong_and_cool"
        app:layout_constraintBottom_toBottomOf="@+id/v_joke_element"
        app:layout_constraintEnd_toEndOf="@+id/v_joke_element"
        app:layout_constraintStart_toStartOf="@+id/v_joke_element"
        app:layout_constraintTop_toTopOf="@id/v_joke_element" />

</androidx.constraintlayout.widget.ConstraintLayout>